<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-8">
            {{#each posts}}
                <div>
                    <article class="post">
                        <div>
                            <a href="/post/{{id}}">{{title}}</a>
                            <span>{{post_text}}</span>
                        </div>
                        <div>
                            <p>
                                Created by {{user.username}} on {{created_at}}
                                || {{comments.length}} comment(s) ||
                            </p>
                        </div>
                    </article>
                </div>

            {{/each}}

        </div>
    <div class="col-sm-2"></div>
</div>