<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-8">
            <section>
                <h2 class="border-bottom border-2">Create a New Post</h2>
                <form id="newpost-form">
                    <div>
                        <label for="newpost-title" class="form-label">Post Title:</label><br>
                        <input type="text" class="form-control" id="newpost-title" placeholder="Title">
                    </div>
                    <div>
                        <label for="newpost-text" class="form-label">Post Content:</label><br>
                        <textarea class="form-control" id="newpost-text" rows="4"></textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary mb-3">Submit</button>
                </form>
            </section>

        </div>
    <div class="col-sm-2"></div>
</div>

<script src="/javascript/newpost.js"></script>